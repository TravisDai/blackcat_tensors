//Forward Declarations
template<class, class, class, class, int...>
class binary_expression;

struct add;
struct sub;
struct div;
struct mul;

template<class >
struct is {
	static constexpr bool expr = false;
};
template<class o, class ml, class lv, class rv, int ... dims>
struct is<binary_expression<o, ml, lv, rv, dims...>> {
	static constexpr bool expr = true;
};

template<class oper, class eval_to, class left, class right>
struct evaluator {
	auto function(eval_to to, left l, right r) {
		typedef std::conditional(is<left>::expr, left.left, left)::type_branch;
	}
};

#endif /* BC_EXPRESSION_BINARY_PARSER_H_ */
