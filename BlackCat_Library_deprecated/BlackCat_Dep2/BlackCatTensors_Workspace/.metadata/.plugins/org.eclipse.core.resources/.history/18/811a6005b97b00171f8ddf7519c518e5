#ifndef BlackCatMatrices_Matrix
#define BlackCatMatrices_Matrix
#include "Tensor.h"
#include "Vector.h"

template<typename number_type>
class Matrix : public Tensor<number_type> {
public:
	Matrix() : Tensor<number_type>() {};
	Matrix(const Tensor<number_type>& t);
	Matrix(Tensor<number_type>&& t);
    virtual Matrix<number_type>& operator=(const Tensor<number_type>& tensor) override; //Covarient return type
    virtual Matrix<number_type>& operator=(Tensor<number_type>&& tensor) override; //covarientreturn type

    Vector<number_type> operator[](unsigned index);
    const Vector<number_type> operator[](unsigned index) const;
};


#endif /* MATRIX_H */
