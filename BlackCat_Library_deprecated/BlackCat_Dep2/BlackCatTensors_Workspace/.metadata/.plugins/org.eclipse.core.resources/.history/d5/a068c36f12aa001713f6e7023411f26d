

#include "Tensor.h"

void sigmoid(Tensor<double,CPU>& x) {
	for (int i = 0; i < x.size(); ++i) {
		x.data()[i] = 1 / 1 + pow(2.71828, -x.data()[i]);
	}
}


__global__  void sig(float* x, unsigned sz) {
	for (int i = 0; i < sz; ++i) {
		x[i] = 1 / (1 + pow(2.71828, -x[i]));
	}
}

void sigmoid(Tensor<double,GPU>& x) {
	for (int i = 0; i < x.size(); ++i) {
		x.data()[i] = 1 / 1 + pow(2.71828, -x.data()[i]);
	}
}
