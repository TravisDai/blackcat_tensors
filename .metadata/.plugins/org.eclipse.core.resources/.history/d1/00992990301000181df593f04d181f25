#ifndef TUPLE_H_
#define TUPLE_H_


//class... tuple --> means some unknown number of types


//Assume this tuple is a size_of 0
template<class derived, class list...>
class Tuple_Array

template<class derived, class front, class list...>
class Tuple_Array<derived, front, list...> {
	using P = derived;													// p = the previous clsas
	using N = Tuple_Array<Tuple_Array<derived, list...>, list...>;		// n = the next class


	front data;

	const auto& next() { static_cast<const N&>(*this); }
		  auto& next() { static_cast<	   N&>(*this); }

	const auto& prev() { static_cast<const P&>(*this); }
		  auto& prev() { static_cast<	   P&>(*this); }

	template<int N>
	const auto& get(std::true_type) { data; }
};



template<class... list>
class Tuple {};
