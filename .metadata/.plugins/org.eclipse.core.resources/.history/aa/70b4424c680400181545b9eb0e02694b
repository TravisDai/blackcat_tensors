#ifndef DEFAULTS_CU_
#define DEFAULTS_CU_

#include "BlackCat_Tensors.h"
//#define DEFAULT_DEVICE_GPU
namespace BC {

class GPU;
class CPU;

#ifdef DEFAULT_DEVICE_GPU
#define BLACKCAT_DEFAULT_MATHLIB_GPU //this changes the default math lib of the BlackCatTensors
using fp_type =  float;
using ml_type = GPU;


#else
using fp_type = double;
using ml_type = CPU;
#endif

//default classes
using mat = Matrix<fp_type, ml_type>;
using vec = Vector<fp_type, ml_type>;

//These are the expression classes
template<class T> using mat_expr = Matrix<T>;
template<class T> using vec_expr = Vector<T>;


}
#endif /* DEFAULTS_CU_ */
