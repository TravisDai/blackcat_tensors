#ifndef TENSORBASE_H_
#define TENSORBASE_H_

namespace BC {

struct ScalarShape {

	int rows() const { return 1; }
	int cols() const { return 1; }
	int size() const { return 1; }

};
struct VectorShape : ScalarShape {
	int m;
	int rows() const { return m; }
	int cols() const { return 1; }

};
struct MatrixShape : VectorShape {
	int n;
	int cols() const { return n; }
};

template<int order>
struct Shape  {};


	template<class scalar, int order, class ml>
	struct TensorBase {



		scalar* array;

		template<class... integers>
		TensorBase() {

		}






	};











}



#endif /* TENSORBASE_H_ */
