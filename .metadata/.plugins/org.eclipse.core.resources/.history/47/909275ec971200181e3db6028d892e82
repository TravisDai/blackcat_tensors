template<class derived, class scalar>
struct TensorBase {

	operator const derived&() { return static_cast<const derived&>(*this); }
	operator 	   derived&() { return static_cast<		 derived&>(*this); }

	template<class d, class s>
	bp_expr<add, derived&,
};
template<class scalar, int order, class derived, class ml>
struct TensorCore {

	template<class T, int ord, int d>
	using tc = TensorCore<T, ord, class ml>



};

}

