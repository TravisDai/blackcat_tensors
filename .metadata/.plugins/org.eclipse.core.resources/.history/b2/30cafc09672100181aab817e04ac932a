#ifdef  __CUDACC__
#ifndef EXPRESSION_BINARY_POINTWISE_SAME_H_
#define EXPRESSION_BINARY_POINTWISE_SAME_H_


#include "Expression_Base.cu"
namespace BC {


template<class T, class op, class lv, class rv>
class binary_expression;

template<class T, class operation, class lv, class rv>
struct binary_expression : public expression<T, binary_expression<T, operation, lv, rv>> {

	operation oper;

	lv left;
	rv right;

	template<class L, class R>
	__BCinline__  binary_expression(L l, R r) :
			left(l), right(r) {
	}

	__BCinline__  auto operator [](int index) const -> decltype(oper(left[index], right[index])) {
		return oper(left[index], right[index]);
	}

	__BC_gcpu__ int rank() const { return right.rank(); }
	__BC_gcpu__ int rows() const { return right.rows(); };
	__BC_gcpu__ int cols() const { return right.cols(); };
	__BC_gcpu__ int size() const { return right.size(); };
	__BC_gcpu__ int LD_rows() const { return right.LD_rows(); }
	__BC_gcpu__ int LD_cols() const { return right.LD_cols(); }
	__BC_gcpu__ int dimension(int i)		const { return right.dimension(i); }
	 void printDimensions() 		const { right.printDimensions();   }
	 void printLDDimensions()	const { right.printLDDimensions(); }
	__BC_gcpu__ auto accessor_packet(int index) const { return right.accessor_packet(index); }
	__BC_gcpu__ const auto innerShape() const { return right.innerShape(); }
	__BC_gcpu__ const auto outerShape() const { return right.outerShape(); }

};


}

#endif /* EXPRESSION_BINARY_POINTWISE_SAME_H_ */
#endif
