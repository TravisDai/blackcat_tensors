#ifndef OUTPUT_CU
#define OUTPUT_CU

#include "Layer.cu"

namespace BC {

struct InputLayer : Layer<InputLayer> {

public:

	InputLayer(int inputs) : INPUTS(inputs), hypothesis(inputs) {
	}

	template<class T> vec forwardPropagation(const vec_expr<T>& x) {
		return next().forwardPropagation(x);
	}
	template<class T> vec forwardPropagation_Express(const vec_expr<T>& x) const {
		return next().forwardPropagation_Express(x);
	}

	template<class T> vec backPropagation(const vec_expr<T>& dy) {
		return dy;
	}

	void updateWeights() {
		//empty
	}
	void clearBPStorage() {
		//empty
	}

	int getClass() {
		return LAYER_TYPE::Input_;
	}
	void write(std::ofstream& is) {
		is << INPUTS << ' ';
		hypothesis.write(is);

	}
	void read(std::ifstream& os) {
		os >> INPUTS;
		hypothesis.read(os);
	}

};
}



#endif /* FEEDFORWARD_CU_ */
