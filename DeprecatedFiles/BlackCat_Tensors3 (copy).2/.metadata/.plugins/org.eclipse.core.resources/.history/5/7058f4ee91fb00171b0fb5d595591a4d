#ifndef Matrix_H
#define Matrix_H

#include "Vector.h"
#include "Tensor_Base.h"


namespace BC {
template<class T, class Mathlib, bool Parent>
class Matrix : public Tensor_Base<T, Matrix<T, Mathlib, Parent>, Mathlib, Parent, 2>
{
	using this_class = Matrix<T, Mathlib, Parent>;
	using parent_class = Tensor_Base<T, Matrix<T, Mathlib, Parent>, Mathlib, Parent, 2>;
	using _int = typename parent_class::subAccess_int;
	using __int = typename parent_class::force_evaluation_int;
	template<class, class, bool> friend class Matrix;

public:

	using parent_class::operator=;
	using parent_class::parent_class;
	Matrix(int r, int c = 1) : parent_class({r, c});

	this_class& operator = (const this_class& mat)  {
		this->assert_same_size(mat);
		Mathlib::copy(this->data(), mat.data(), this->size());
		return this->asBase();
	}
	auto operator [] (__int i) const {
		return this->data()[i];
	}
		  Vector<T, Mathlib, false> operator[] (_int i) {
		return Vector<T, Mathlib, false>(&this->array[i * this->rows()]);
	}
	const Vector<T, Mathlib, false> operator[] (_int i) const {
		return Vector<T, Mathlib, false>(&this->array[i * this->rows()]);
	}

	const Matrix<unary_expression_transpose_mat<T, this_class>, Mathlib, false> t() const {
		return Matrix<unary_expression_transpose_mat<T, this_class>, Mathlib, false>(*this, this->data());
	}
		  Matrix<unary_expression_transpose_mat<T, this_class>, Mathlib, false> t() {
		return Matrix<unary_expression_transpose_mat<T, this_class>, Mathlib, false>(*this, this->data());
	}
};

} //End Namespace BC


#endif /* Matrix */
